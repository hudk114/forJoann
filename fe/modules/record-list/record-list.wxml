<!--modules/record-fragment/record-fragment.wxml-->
<view>
  <view
    class="record-content"
    wx:for="{{recordList}}" wx:for-index="index" wx:for-item="record" wx:key="index">
    <view
      class="{{record.play ? 'record-fragment record-play' : 'record-fragment'}}"
      bindtap="handleRecordPlay"
      data-index="{{index}}"
      style="{{record.style}}">
      <view class="{{record.play ? 'triangle record-play' : 'triangle'}}"></view>
      {{record.dura}}
      <view class="{{record.play ? 'loading' : 'loading'}}"></view>
    </view>
    <view class="record-close-button-outter">
      <icon
        class="record-close-button"
        type="clear"
        size="15"
        bindtap="handleDelete"
        data-index="{{index}}">
      </icon>
    </view>
  </view>
</view>