<view>
  <component-text-area
    value="{{memoryText}}"
    bind:valueChange="handleTextareaChange">
  </component-text-area>

  <view class="time-content-outter">
    <picker
      mode="date"
      value="{{date}}"
      start="1900-01-01"
      end="{{nowDate}}"
      bindchange="handleDateChange">
      <view class="picker">
        {{date ? '回忆时间: ' : '请选择回忆时间'}}{{date}}
      </view>
    </picker>
  </view>

  <view class="camera-content-outter">
    <view class="camera-content" wx:for="{{imgs}}" wx:for-item="src" wx:key="{{imgs}}">
      <!-- <view class="camera-close" bindtap="handleDelete" data-index="{{index}}"></view> -->
      <view class="camera-close-outter">
        <icon type="clear" size="15" color="red" class="camera-close" bindtap="handleDelete" data-index="{{index}}" />
      </view>
      <image class="camera-picture" src="{{src}}"/>
    </view>
  </view>
  
  <view class="upload-button-outter">
    <button type="primary" class="upload-button" bindtap="uploadMemory">上传回忆</button>
  </view>
  
  <view class="upload-content">
    <view class="upload-content-item"
      bindtap="takeRecord">
      录音
    </view>
    <view class="upload-content-item"
      bindtap="takeVideo">
      摄像
    </view>
    <view class="upload-content-item"
      bindtap="takePhoto">
      图片
    </view>
  </view>

  <view class="record-layout" wx:if="{{recordShow}}" bindtap="handleRecordClose">
    <view class="record-content-outter">
      <button catchtap="handleRecord">record</button>
    </view>
  </view>
</view>