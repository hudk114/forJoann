<view>
  <component-text-area></component-text-area>
  <view class="time-content-outter">
    <picker mode="date" value="{{date}}" start="2015-09-01" end="2018-10-01" bindchange="handleDateChange">
      <view class="picker">
        {{date ? '回忆时间: ' : '请选择回忆时间'}}{{date}}
      </view>
    </picker>
  </view>
  <view class="camera-content-outter">
    <view class="camera-content" wx:for="{{imgs}}" wx:for-item="src" wx:key="{{imgs}}">
      <!-- <view class="camera-close" bindtap="handleDelete" data-index="{{index}}"></view> -->
      <view class="camera-close-outter">
        <icon type="clear" size="15" color="red" class="camera-close" bindtap="handleDelete" data-index="{{index}}" />
      </view>
      <image class="camera-picture" src="{{src}}"/>
    </view>
  </view>
  <view class="upload-button-outter">
    <button type="primary" class="upload-button">上传回忆</button>
  </view>
  <view class="upload-content">
    <view class="upload-content-item"
      bindtap="takeRecord">
      录音
    </view>
    <view class="upload-content-item"
      bindtap="takeVideo">
      摄像
    </view>
    <view class="upload-content-item"
      bindtap="takePhoto">
      图片
    </view>
  </view>
</view>